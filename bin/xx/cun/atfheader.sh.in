#!/bin/bash
oracc=@@ORACC@@
oraccbin=$oracc/bin
atf=$1
if [[ "$atf" == "" ]]; then
    echo $0: must give ATF file. Stop.
    exit 1
fi
lang=$2
unicode=$3
char=`head -c 1 $atf`
if [[ $char != "&" ]]; then
    if [[ "$lang" == "sux" ]]; then
	proj="epsd2"
    else
	proj="cams"
    fi
    if [[ "$unicode" != "" ]]; then
	unicode=`$oraccbin/atfuni $atf`
    fi
    cat <<EOF
&X111111=Data
#project: $proj
#atf: use math
$unicode
EOF
    $oraccbin/atfnum check <$atf
    if [ $? != 0 ]; then
	$oraccbin/atfnum <$atf
    else
	cat $atf
    fi
else
    cat $atf
fi
