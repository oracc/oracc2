<x>
  <div id="p4itemNav" class="p4items @@pui_ceid()@@">
    <p class="bg-dk">

      <img id="p4PageItem" class="p4icon p4spread" src="/img/p3-pageitem.png"
	   alt="Toggle Page/Item view" title="Toggle Page/Item view"
	   onclick="toggle_pi()"/>

      <!--Item-->
      <img id="p4ItemPrev" class="p4icon p4spread" src="/img/p3-backward.png"
	   alt="Item back" title="Item back"
	   onclick="act_item_prev()"/>
      
      <!--<input id="item" name="item" type="text" onchange="p3action('itemset')" size="2" value="@@cgivar:item@@"/>-->

      <span id="p4ItemView">ITEM VIEW</span>
      
      <img id="p4ItemNext" class="p4icon" src="/img/p3-forward.png"
	   alt="Item forward" title="Item forward"
	   onclick="act_item_next()"/>

      <div id="p4ItemXMD">
	<span>@@pui_imax()@@ Texts</span>
      </div>

      <div id="p4ItemSRCH">
	<span>@@pui_imax()@@ Texts</span>
	[<span class="resultcount">@@pui_results()@@ matches]</span>
      </div>

      <div id="p4ItemXTF">
	@@pui_translations()@@
	<input type="checkbox" onchange="toggle_to()" id="transonly" value="@@pui_transonly()@@"/>&#xa0;only
      </div>

    </p>
  </div>

  <div id="p4PageNav" class="p4pages @@pui_ceid()@@">
    <p class="p3toccenter bg-dk">

      <button id="p4Zoom" class="p4spread" onclick="act_zoom('0')">All Results</button>

      <img id="p3pagesview" class="p4icon p4spread" src="/img/p3-pageitem.png"
	   alt="Toggle Page/Item view" title="Toggle Page/Item view"
	   onclick="p3action('viewstateItems')"/>
      
      <img id="p4PagePrev" class="p4icon p4spread" src="/img/p3-backward.png"
	   alt="Page back" title="Page back"
	   onclick="act_prev()"/>
      
      <!--Page-->
      <input id="p4Pageset" type="text" onchange="act_page()" size="3"
	     value="@@pui_current_page()@@"/>

      <img id="p4PageNext" class="p4icon p4spread" src="/img/p3-forward.png"
	   alt="Page forward" title="Page forward"
	   onclick="act_next()"/>

      @@pui_active_items()@@ items
      /
      @@pui_active_pages()@@ Pages

      <span id="p4SrchResultCount">[@@pui_srch_results()@@ matches]</span>
      
      <span id="p4CeType" class="cetype">
	<select id="p3cetype" name="p3cetype"  onchange="p3action('cestate')">
	  <option value="line">Line</option>
	  <option value="unit">Sentence</option>
	  <option value="kwic">KWIC</option>
	</select>
      </span>
    </p>
  </div>

  <p id="p4ToggleMeta" class="p4raise">
    <img class="p4icon" src="/img/p3-full.png"
	 alt="Toggle metadata pane" title="Toggle metadata pane" onclick="toggle_md()"/>
  </p>  
</x>

