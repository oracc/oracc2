<x>
  <div id="p4itemNav" class="p4items @@pui_ceid()@@">
    <p class="bg-dk">

      <img id="p3itemsview" class="p4icon p4spread" src="/img/p3-pageitem.png"
	   alt="Toggle Page/Item view" title="Toggle Page/Item view"
	   onclick="p3action('viewstatePages')"/>

      <!--Item-->
      <img class="p4icon p4spread" src="/img/p3-backward.png" alt="Item back" title="Item back" name="ilarrow" id="ilarrow"
	   onclick="p3action('itemback')"/>
      
      <input id="item" name="item" type="text" onchange="p3action('itemset')" size="2" value="@@cgivar:item@@"/>
      
      <img class="p4icon" src="/img/p3-forward.png" alt="Item forward" title="Item forward" name="irarrow" id="irarrow"
	   onclick="p3action('itemfwd')"/>
      
      <span value="@@runtime:items@@"/> Texts
      [<span class="resultcount" value="@@runtime:resultcount@@"/> matches]

      @@pui_translations()@@
      <input type="checkbox" onchange="toggle_to()" id="transonly" value="@@cgivar:transonly@@"/>&#xa0;only

    </p>
  </div>

  <div id="p4PageNav" class="p4pages @@pui_ceid()@@">
    <p class="p3toccenter bg-dk">

      <button id="p4Zoom" class="p4spread" onclick="p4zoom('0')">All Results</button>

      <img id="p3pagesview" class="p4icon p4spread" src="/img/p3-pageitem.png"
	   alt="Toggle Page/Item view" title="Toggle Page/Item view"
	   onclick="p3action('viewstateItems')"/>
      
      <img id="plarrow" class="p4icon p4spread" src="/img/p3-backward.png"
	   alt="Page back" title="Page back"
	   onclick="p3action('pageback')"/>
      
      <!--Page-->
      <input id="p4Pageset" type="text" onchange="p3action('pageset')" size="3"
	     value="@@pui_current_page()@@"/>

      <img id="prarrow" class="p4icon p4spread" src="/img/p3-forward.png"
	   alt="Page forward" title="Page forward"
	   onclick="p3action('pagefwd')"/>

      @@pui_active_items()@@ items
      /
      @@pui_active_pages()@@ Pages

      <span id="p4SrchResultCount">[@@pui_srch_results()@@ matches]</span>
      
      <span id="p4CeType" class="cetype">
	<select id="p3cetype" name="p3cetype"  onchange="p3action('cestate')">
	  <option value="line">Line</option>
	  <option value="unit">Sentence</option>
	  <option value="kwic">KWIC</option>
	</select>
      </span>
    </p>
  </div>

  <p id="p4ToggleMeta" class="p4raise">
    <img class="p4icon" src="/img/p3-full.png"
	 alt="Toggle metadata pane" title="Toggle metadata pane" onclick="toggle_md()"/>
  </p>  
</x>

