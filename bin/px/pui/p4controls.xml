<x>
  <div id="p4itemNav" class="p4items">
    <p class="bg-dk">

      <img class="p4icon p4spread" src="/img/p3-pageitem.png" alt="Toggle Page/Item view" title="Toggle Page/Item view" name="p3itemsview" id="p3itemsview"
	   onclick="p3action('viewstatePages')"/>

      <!--Item-->
      <img class="p4icon p4spread" src="/img/p3-backward.png" alt="Item back" title="Item back" name="ilarrow" id="ilarrow"
	   onclick="p3action('itemback')"/>
      
      <input id="item" name="item" type="text" onchange="p3action('itemset')" size="2" p3:value="@@cgivar:item@@"/>
      
      <span class="p3arrow">
	<img class="p4icon" src="/img/p3-forward.png" alt="Item forward" title="Item forward" name="irarrow" id="irarrow"
	     onclick="p3action('itemfwd')"/>
      </span>
      
      <span p3:value="@@runtime:items@@"/> Texts
      [<span class="resultcount" p3:value="@@runtime:resultcount@@"/> matches]

      @@pui_translations()@@
      <input type="checkbox" onchange="to_toggle()" name="transonly" id="transonly" value="transonly" p3:value="@@cgivar:transonly@@"/>&#xa0;only

    </p>
  </div>
  
  <div id="p4PageNav" class="p4pages">
    <p class="p3toccenter bg-dk">

      <button id="p4Zoom" class="p4spread" type="submit" name="unzoom" onclick="p3zoom('0')">All Results</button>

      <img class="p4icon p4spread" src="/img/p3-pageitem.png" alt="Toggle Page/Item view" title="Toggle Page/Item view" name="p3pagesview" id="p3pagesview"
	     onclick="p3action('viewstateItems')"/>
      
      <img class="p4icon p4spread" src="/img/p3-backward.png" alt="Page back" title="Page back" name="plarrow" id="plarrow"
	   onclick="p3action('pageback')"/>
      
      <!--Page-->
      <input id="pageset" name="pageset" type="text" onchange="p3action('pageset')" size="2" p3:value="@@cgivar:page@@"/>

      <img class="p4icon p4spread" src="/img/p3-forward.png" alt="Page forward" title="Page forward" name="prarrow" id="prarrow"
	   onclick="p3action('pagefwd')"/>

      <span p3:value="@@runtime:items@@"/> lines
      /
      <span p3:value="@@runtime:pages@@"/> Pages

      [<span class="resultcount" p3:value="@@runtime:resultcount@@"/> matches]
      
      <span class="cetype">
	<select id="p3cetype" name="p3cetype"  onchange="p3action('cestate')">
	  <option value="line">Line</option>
	  <option value="unit">Sentence</option>
	  <option value="kwic">KWIC</option>
	</select>
      </span>
    </p>
  </div>
  
  <p id="p4ToggleMeta" class="p4raise">
    <img class="p4icon" src="/img/p3-full.png"
	 alt="Toggle metadata pane" title="Toggle metadata pane" onclick="toggle_md()""/>
  </p>  
