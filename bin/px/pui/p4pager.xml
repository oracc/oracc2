<div id="p4Pager" class="@@pui_state()@@">
  <div id="p4Masthead">
    <p id="p4HeadTitle" class="banner bborder-top bborder-bot">
      <a href="/">Oracc:</a> @@pui_title()@@
    </p>
  </div>
  <div id="p4Header" class="menu banner bborder-bot">
      <p id="p4Banner">
	<span id="p4Icons">
	  @@p4icons.xml@@
	</span>
      </p>
      <div id="p4Search">
	@@p4search.xml@@
      </div>
      <div id="p4Controls">
	@@p4controls.xml@@
      </div>
      @@p4dropdown.xml@@
  </div>
  <div id="p4Flex">
    <div id="p4Menu" class="auto" onclick="alert('hovering')">
      @@pui_menu()@@
    </div>
    <div id="p4Content">
      @@pui_content()@@
    </div>
  </div>
  <div id="p4Footer">
    @@p4footer.xml@@
  </div>
</div>
