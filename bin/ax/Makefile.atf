#
# Makefile to build derivatives of .atf, .xtf, etc.
#
# Replaces o2-atf.sh and o2-xtf.sh
#

.PRECIOUS: .xtf

default: ${pqx}.tok

txh: ${pqx}.txh

clean:
	@rm -f *.xtf *.tok

%.xtf: %.atf
	${ORACC}/bin/oxx -C ${atfargs} -x$@ $<

%.tok: %.xtf
	${ORACC}/bin/tokx -slg <$< >$@

%.txh: %.xtf
	${ORACC}/bin/xtf2txh ${project}:${pqx}
